<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/standarMargin"
    android:paddingRight="@dimen/standarMargin"
    tools:context="com.weirdgiraffegames.stellarleapscorepad.AboutActivity">


    <TextView
        android:layout_marginTop="@dimen/standarMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/about"/>

    <TextView
        android:layout_marginTop="@dimen/standarMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_the_game"/>

    <TextView
        android:layout_marginTop="@dimen/standarMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_rules"/>

    <TextView
        android:layout_marginTop="@dimen/standarMargin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_amiculous_apps"/>

</LinearLayout>
