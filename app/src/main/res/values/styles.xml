<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="InputPointsText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="ScorePadLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:background">@drawable/scorepad_label_background</item>
        <item name="android:layout_width">@dimen/scoreLabelWidth</item>
        <item name="android:layout_height">@dimen/scoreLabelHeight</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="ScorePadCell" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/scoreColumnWidth</item>
        <item name="android:layout_height">@dimen/scoreColumnHeight</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomCheckBox" parent="@android:style/Widget.Holo.CompoundButton.CheckBox">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/standarMargin</item>
        <item name="android:layout_marginTop">@dimen/standarMargin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/checkbox_text</item>
        <item name="android:button">@android:drawable/btn_star</item>
    </style>

    <style name="InputPointsEditText" parent="@android:style/Widget.Holo.EditText">
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_width">@dimen/inputCellWidth</item>
        <item name="android:layout_height">@dimen/inputCellHeight</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/nebula_dark_blue</item>
        <item name="android:background">@color/nebula_very_light_blue</item>
    </style>

    <style name="GameLogEntry" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">@dimen/gameLogEntryTotalPointWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="GameLogHeader" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">@dimen/gameLogEntryTotalPointWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
